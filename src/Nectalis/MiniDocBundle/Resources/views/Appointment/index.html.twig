{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Appointment list</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Patientname</th>
                <th>Startdate</th>
                <th>Durationminutes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('appointment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.patientName }}</td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.durationMinutes }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('appointment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('appointment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('appointment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
